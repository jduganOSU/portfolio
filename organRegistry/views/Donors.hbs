{{!-- Create a table --}}
<table id="donors-table">

    {{!-- Header section --}}
    <thead>

        <tr>
            <th>Donor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Phone Number</th>
            <th>Home Zip</th>
            <th>Blood Type</th>
            <th>Age</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.idDonors}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.zip}}</td>
            <td>{{this.bloodType}}</td>
            <td>{{this.age}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>


{{!-- Form to add a record to the table  --}}
<div class="form-div">
<h2>Add a new Donor</h2>
<p>To add a new donor, please enter the below info and 'Submit'!</p>
<form id="add-donor-form-ajax">
    <label for="input-firstName-donor">First Name </label>
    <input type="text" name="input-firstName-donor" id="input-firstName-donor" placeholder="First Name..">

    <label for="input-lastName-donor">Last Name: </label>
    <input type="text" name="input-lastName-donor" id="input-lastName-donor" placeholder="Last Name..">

    <label for="input-email-donor">Email Address: </label>
    <input type="text" name="input-email-donor" id="input-email-donor" placeholder="Email..">
    
    <label for="input-phone-donor">Phone Number: </label>
    <input type="number" name="input-phone-donor" id="input-phone-donor" placeholder="Phone Number..">

    <label for="input-zip-donor">Home Zip Code: </label>
    <input type="text" name="input-zip-donor" id="input-zip-donor" placeholder="Home zip..">

    <label for="input-bloodType-donor">Blood Type: </label>
    <select name="input-bloodType-donor" id="input-bloodType-donor">
        <option value="">Blood Type:</option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="AB">AB</option>
        <option value="O">O</option>
    </select>

    <label for="input-age-donor">Age: </label>
    <input type="number" name="input-age-donor" id="input-age-donor" placeholder="Age..">


    <input type="submit">
</form>
</div>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="/organRegistry/public/js/donor/add_donor.js"></script>

